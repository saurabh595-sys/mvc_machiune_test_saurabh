@using PagedList
@using PagedList.Mvc
@model IPagedList<Nimap_Machine_Test.Models.Product_List>

@{
    ViewBag.Title = "Product_list";
}
<div>
    <h2>Product_list</h2><br /><br />

    <p>
        @using (Html.BeginForm("Product_list", "Home", FormMethod.Get))
        {
            <b>Search By:</b>@Html.RadioButton("Searchby", "Name")<text>Name</text>
            @Html.RadioButton("Searchby", "Id")<text>Id</text>
            <br />
            @Html.TextBox("search")<input type="submit" value="Search" />
        }

    </p>

    <table class="table table-bordered" =1>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().CategoryName)
            </th>



        </tr>
        @if (Model.Count() == 0)
        {


            <tr>
                <td colspan="4"> No Rows Match Search Critera</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>

                </tr>
            }
        }



    </table>

    @Html.PagedListPager(Model, page => Url.Action("Product_list", new { page }))
</div>