@using PagedList
@using PagedList.Mvc
@model IPagedList<Nimap_Machine_Test.Models.Category_model>

@{
    ViewBag.Title = "Category";
}

<h2>Category</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().CategoryName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Edit", "CatogryEdit", new { id = item.CategoryId }) |

                @Html.ActionLink("Delete", "CatDelete", new { id = item.CategoryId })
            </td>
        </tr>
    }
    @Html.PagedListPager(Model, page => Url.Action("Category", new { page }))
</table>
